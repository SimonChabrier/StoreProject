<nav class="navbar navbar-expand-lg navbar-light bg-light">
{% include '_fragments/_burger.html.twig' %} 

  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarNavDropdown">
    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
    {% for cat in catsAndSubCats.getOnlyCatsAndOnlySubCats() %}      
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="{{ path('app_category_index', {'id': cat.catId}) }}" id="navbarDropdown{{ cat.catId }}" role="button" data-bs-toggle="dropdown" aria-expanded="false">{{ cat.catName }}</a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdown{{ cat.catId }}">
          {% for subCat in cat.subCategories %}
            <li>
              <a class="dropdown-item" href="{{ path('app_sub_category_show', {'id': subCat.subCatId}) }}">{{ subCat.subCatName }}</a>
            </li>
          {% endfor %}
          </ul>
      </li>
    {% endfor %}
    </ul>
  </div>

</nav>

