{% extends 'base.html.twig' %}

{% block title %}Cart{% endblock %}

{% block content %}
    <div class="container mt-4">
        <h1>Votre panier</h1>
        {% if cart.items.count > 0 %}
            <div class="row mt-2">
                <!-- List of items -->
                <div class="col-md-8">
                {{ form_start(form) }}
                <div class="card">
                    <div class="card-header bg-dark text-white d-flex">
                        <h5>Produits</h5>
                        <div class="ml-auto">
                            {{ form_widget(form.save, {'attr': {'class': 'btn btn-warning'}}) }}
                            {{ form_widget(form.clear, {'attr': {'class': 'btn btn-light'}}) }}
                        </div>
                    </div>
                    <ul class="list-group list-group-flush">
                        {% for item in form.items %}
                            <li class="list-group-item d-flex">
                                <div class="flex-fill mr-2">   
                                    {% for picture in item.vars.data.product.pictures %}
                                        {% if picture %}
                                        {# get just last picture #}
                                        {% if loop.last %}
                                            <img class="last-five-picture" src="/uploads/files/pictures_150/{{ picture.getFilename }}" alt="{{ picture.alt }}" width="150">
                                        {% endif %}
                                    {% endif %}
                                    {% else %}
                                    <img class="last-five-picture" src="/assets/pictures/defaultSneakersPicture.webp" alt="" loading="lazy" width="150">
                                    {% endfor %} 
                                </div>

                                <div class="flex-fill mr-2">
                                    <h5 class="mt-0 mb-0">{{ item.vars.data.product.name }}</h5>
                                    {# <small>{{ item.vars.data.product.description[:50] }}...</small> #}
                                    <div class="form-inline mt-2">
                                        <div class="form-group mb-0 mr-2">
                                            {{ form_widget(item.quantity, {
                                                'attr': {
                                                    'class': 'form-control form-control-sm ' ~ (item.quantity.vars.valid ? '' : 'is-invalid')
                                                }
                                            }) }}
                                            <div class="invalid-feedback">
                                                {{ form_errors(item.quantity) }}
                                            </div>
                                        </div>
                                        {{ form_widget(item.remove, {'attr': {'class': 'btn btn-dark btn-sm remove_btn'}}) }}
                                    </div>
                                </div>

                                <div class="flex-fill mr-2 text-right">
                                    <b>{{ item.vars.data.product.sellingPrice }} €</b>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                {# ajouter csrf token sinon ça ne marche pas quand on supprime un produit et on a une erreur #}
                {{ form_row(form._token) }}
                {{ form_end(form, {'render_rest': false}) }}
            </div>
                <!-- Total panier -->
                <div class="col-md-4">
                    <div class="card mt-4 mt-md-0">
                        <h5 class="card-header bg-dark text-white">Total</h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between">
                                <div><b>Total</b></div>
                                <span><b>{{ cart.total }} €</b></span>
                            </li>
                        </ul>
                        <div class="card-body">
                            <a href="#" class="btn btn-warning w-100">Commander</a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="alert alert-info mt-2">
                Votre panier est vide. Retour à la <a href="{{ path('app_home') }}">liste des produits</a>.
            </div>
        {% endif %}
    </div>
{% endblock %}