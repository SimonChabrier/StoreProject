{% extends 'base.html.twig' %}

{% block title %}Configuration générale{% endblock %}

{% block content %}
    <h1>Configuration générale</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Identifiant</th>
                <td>{{ configuration.id }}</td>
            </tr>
            <tr>
                <th>Durée de vie du cache</th>
                <td>{{ configuration.cacheTtl }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_configuration_index') }}">Retour à la liste</a>

    <a href="{{ path('app_configuration_edit', {'id': configuration.id}) }}">edit</a>

    {{ include('configuration/_delete_form.html.twig') }}
{% endblock %}
