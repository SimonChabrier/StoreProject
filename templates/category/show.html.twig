{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block content %}

    <h1>Produits de la categorie {{ category.name }}</h1>
{% if app.user and is_granted('ROLE_ADMIN') %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_category_index') }}">Retour Ã  la liste</a>
    <a href="{{ path('app_category_edit', {'id': category.id}) }}">Modifier</a>
    {{ include('category/_delete_form.html.twig') }}
{% endif %}  

<hr>
    <div class="last-five swiper">
        <div class="last-five-products">
        {% for product in category.products %}
                <section>
                    {% include '_fragments/_product_object.html.twig' %} 
                </section>  
        {% endfor %}
        </div>
    </div>

{% endblock %}
