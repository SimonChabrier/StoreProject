{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block content %}
    <h1>Administration des catégories</h1>

    <table class="table mt-3">
        <thead>
            <tr>
                <th>Nom de la catégorie</th>
                <th>Identifiant</th>
                <th>Ordre d'affichage</th>
                <th>Admin</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td>{{ category.id }}</td>
                <td>{{ category.listOrder }}</td>
                <td>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}">Voir</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune données enregistrée pour le moment...</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_category_new') }}" class="btn">Ajouter une catégorie</a>
{% endblock %}
