{% extends 'base.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block content %}
    <h1>Comment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Comment Id</th>
                <th>Product Id</th>
                <th>Author</th>
                <th>Comment</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
    
            <tr>
                <td>{{ comment.id }}</td>
                <td><a href="{{ path('app_product_show', {'id': comment.product.id}) }}">{{ comment.product.id }}</a></td>
                {# <td><a href="{{ path('app_user_show', {'id': comment.id}) }}">{{ comment.author }}</a></td> #}
                <td>{{ comment.text }}</td>
                <td>{{ comment.email }}</td>
                <td>
                    <a href="{{ path('app_comment_show', {'id': comment.id}) }}">Voir</a>
                    <a href="{{ path('app_comment_edit', {'id': comment.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_comment_new') }}">Create new</a>
{% endblock %}
