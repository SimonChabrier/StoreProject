{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block content %}


    <h1>{{ product.name|title }}</h1>
    
    <div class="gallery">
    <img src="https://assets.adidas.com/images/h_840,f_auto,q_auto,fl_lossy,c_fill,g_auto/acc1f836e10a4c1191dbae2801556d8d_9366/Chaussure_Ultraboost_5_DNA_Running_Sportswear_Lifestyle_Blanc_GV8747_01_standard.jpg" alt="">
    </div>

    <hr>
    {% if product.category %}
    - Categorie : <a href="{{ path('app_category_show', { 'id': product.category.id }) }}">{{ product.category|capitalize }}</a>
    {% endif %}

    {% if product.subCategory %}
    - Sous-Categorie : <a href="{{ path('app_sub_category_show', { 'id': product.subCategory.id }) }}"> {{ product.subCategory|capitalize }}</a>
    {% endif %}

    {% if product.productType.name %}
    - Type de produit : <a href="{{ path('app_product_type_show', { 'id': product.productType.id }) }}"> {{ product.productType.name|capitalize }}</a>
    {% endif %}

    <hr>
    - Propriétés du produit
        <ol>
            <li>Id : {{ product.id }}</li>
            <li>Nom : {{ product.name }}</li>
            <li>Stock : {{ product.inStockQuantity }}</li>
            <li>Visible : {{ (product.visibility) ? 'Oui' : 'Non' }}</li>
            <li>Prix catalogue : <span class="catalogPrice"><del>{{ product.catalogPrice|round(0) }} €</del></span></li>
            {% set discount = (product.catalogPrice - product.sellingPrice|round(0) ) / product.catalogPrice * 100 %}
            <li>Réduction : <span class="dicountPrice">{{ discount|round(0) }} % </span></li> 
            <li>Prix : <span class="price">{{ product.sellingPrice|round(0) }} €</span></li>
            <li>Marque : {{ product.brand }}</li>
        </ol>

    <hr>

    - Liste des caractéristiques de CE produit (ProductData de la Class Product)
    <hr>
        <ol>
        {% for index, data in product.productData %}
                <li>{{ data.key|capitalize }} : {{ data.value|capitalize }}</li>
        {% endfor %}
        </ol>
    <hr>


    - Commentaires liés au produit
    <hr>
    {% for index, comment in product.comments %}
        <ol>
            <li><i class="bi bi-person-circle"></i> {{ comment.author }}</li>
            <li><i class="bi bi-chat-square-text-fill"></i> {{ comment.text }}</li>
        </ol>
    {% endfor %}
    
    <a href="{{ path('app_product_index') }}">Retour à la liste</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">Modifier</a>

    {{ include('product/_delete_form.html.twig') }}

    {# liked products #}
    <hr>
    <div class="last-five swiper">
    <h2>Produits similaires</h2>
    <div class="last-five-products-related swiper-wrapper">
    {% for product in relatedProducts %}
            <section class="swiper-slide">
                <h6>{{ product.name|upper }}</h6>
                <img class="last-five-picture" src="https://assets.adidas.com/images/h_840,f_auto,q_auto,fl_lossy,c_fill,g_auto/acc1f836e10a4c1191dbae2801556d8d_9366/Chaussure_Ultraboost_5_DNA_Running_Sportswear_Lifestyle_Blanc_GV8747_01_standard.jpg" alt="">
                <span class="catalog-price"><del>{{ product.catalogPrice }} €</del></span>
                <span class="selling-price">{{ product.sellingPrice|number_format(0, ',', ' ') }} €</span>
                <div class="productInfo">
                    {% if product.category is not empty %}
                    <span class="categorie">Categorie : {{ product.category.name }}</span>
                    {% endif %}
                    {% if product.subCategory is not empty %}
                    {# {% for subCategory in product.subCategory %} #}
                        <span class="sous-categorie">Sous-categorie : {{ product.subCategory }}</span>
                    {# {% endfor %} #}
                    {% endif %}
                    <span class="type">Type : {{ product.productType }}</span>
                </div>
                <div class="productInfoFooter">
                    {% set discount = (product.catalogPrice - product.sellingPrice ) / product.catalogPrice * 100 %}
                    <span>-{{ discount|round }}%</span> 
                    <span class="productLink"><a href="{{ path('app_product_show', {'id': product.id}) }}">Détail</a></span>
                </div>
            </section>
        {% endfor %}
        </div>
        <div class="swiper-pagination"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
         {# <div class="swiper-scrollbar"></div> #}
    </div>


{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css"/>
{% endblock %}

{% block javascripts %}
    {# https://swiperjs.com/get-started #}
    <script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>

<script>

document.addEventListener('DOMContentLoaded', () => {
    const swiper = new Swiper('.swiper', {
    // use arrows to navigate
    navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
    },
    // Optional parameters
    slidesPerView: 4,
    direction: 'horizontal',
    autoplay: {
        delay: 3000,
        disableOnInteraction: true,
    },
    
    transitionEffect: 'slide',
    loop: true,
    centeredSlides: true,
   
    pagination: {
        el: '.swiper-pagination',
        type: 'bullets',
        clickable: true,
    },
});
});
</script>

{% endblock %}

{% endblock %}