{% extends 'base.html.twig' %}

{% block title %}Administration des types de produits{% endblock %}

{% block content %}
    <h1>Administration des types de produits</h1>

    <table class="table mt-3">
        <thead>
            <tr>
                <th>Identifiant</th>
                <th>Nom</th>
                <th>Admin</th>
            </tr>
        </thead>
        <tbody>
        {% for product_type in product_types %}
            <tr>
                <td>{{ product_type.id }}</td>
                <td>{{ product_type.name }}</td>
                <td>
                    <a href="{{ path('app_product_type_show', {'id': product_type.id}) }}">Voir</a>
                    <a href="{{ path('app_product_type_edit', {'id': product_type.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune données enregistrée pour le moment...</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_product_type_new') }}" class="btn">Ajouter un type de produit</a>
{% endblock %}
