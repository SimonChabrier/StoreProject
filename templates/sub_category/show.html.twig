{% extends 'base.html.twig' %}

{% block title %}{{ sub_category.name }}{% endblock %}

{% block body %}
    <h1>SousCat : {{ sub_category.name }}</h1>
    <p>De la catégorie : {{ sub_category.getCategoryName }}</p>
    <hr>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sub_category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ sub_category.name }}</td>
            </tr>
            <tr>
                <th>ListOrder</th>
                <td>{{ sub_category.listOrder }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_sub_category_index') }}">back to list</a>

    <a href="{{ path('app_sub_category_edit', {'id': sub_category.id}) }}">edit</a>

    {# {{ include('sub_category/_delete_form.html.twig') }} #}
    
    <hr>
    <h2>Produits de {{ sub_category.name }} :</h2>
    <p>De la catégorie : {{ sub_category.getCategoryName }}</p>

    <ol>
    {% for product in products %}
       <li>Type : {{ product.productType }}  / Nom :{{ product.name }}</li>
    {% endfor %}
    </ol>

{% endblock %}
